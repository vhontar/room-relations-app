<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="viewmodel"
                  type="com.easycoding.learningroomrelations.ui.musiclibrarydetails.MusicLibraryDetailsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.users.UsersActivity">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMusicLibraryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="20dp"
                android:textColor="@color/black"
                android:text="@{viewmodel.musicLibraryUsers.musicLibrary.name}"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUsers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:overScrollMode="never"
                app:layout_constraintTop_toBottomOf="@id/tvMusicLibraryName"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>